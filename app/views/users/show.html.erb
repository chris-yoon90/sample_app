<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<% @microposts.each do |micropost| %>
					<li><%= render 'microposts/micropost', object: micropost %> </li>
				<% end %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>

